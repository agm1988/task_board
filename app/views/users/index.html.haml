.page-header
  %h1=t '.title'
%table.table.table-striped
  %thead
    %tr
      %th= User.human_attribute_name(:id)
      %th= User.human_attribute_name(:first_name)
      %th= User.human_attribute_name(:last_name)
      %th= User.human_attribute_name(:email)
      %th= User.human_attribute_name(:is_admin)
      %th= User.human_attribute_name(:nickname)
      %th= User.human_attribute_name(:created_at)
      %th=t '.actions', default: t('helpers.actions')
      %th
  %tbody
    = render @users

= link_to t('.new'), new_user_path, class: 'btn btn-primary'
