%tr
  %td= user.id
  %td= link_to(user.first_name, user_path(user))
  %td= link_to(user.last_name, user_path(user))
  %td= user.email
  %td= user.is_admin
  %td= user.nickname
  %td=l user.created_at
  %td
    - if policy(user).edit?
      = link_to t('edit'), edit_user_path(user), class: 'btn btn-default btn-xs'
  %td
    - if policy(user).destroy?
      = link_to t('destroy'), user_path(user), method: :delete,
      data: { confirm: t('confirm') }, class: 'btn btn-xs btn-danger'
