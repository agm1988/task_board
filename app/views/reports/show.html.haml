.page-header
  %h1=t('.title')

%p
  %strong= Report.human_attribute_name(:user_id) + ':'
  %br
  = @report.user_id
%p
  %strong= Report.human_attribute_name(:title) + ':'
  %br
  = @report.title

%br
%h4
  Tasks
  %ul
    = render @report.tasks


= link_to t('.back', :default => t("helpers.links.back")), reports_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_report_path(@report), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), report_path(@report), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

