= simple_form_for @report, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id, as: :hidden, input_html: { value: current_user.id }
  = f.input :title
  %h3
    Tasks
  #tasks
    = f.simple_fields_for :tasks do |task|
      = render 'task_fields', f: task
    .links
      = link_to_add_association 'add task', f, :tasks, { class: 'btn-sm btn-success' }

  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), reports_path, :class => 'btn btn-default'
