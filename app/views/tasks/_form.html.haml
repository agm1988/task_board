= simple_form_for @task, html: { class: 'form-horizontal' } do |f|
  = f.error_notification

  = f.input :title
  = f.input :description
  = f.input :status, collection: Task::STATUSES, label_method: -> (task) { t("enums.task.status.#{task}") },
  include_blank: false
  = f.association :tags, collection: Tag.all, input_html: { class: 'task-tags-select', multiple: true }

  = f.button :submit, class: 'btn-primary'
  = link_to t('cancel'), users_path, class: 'btn btn-default'
